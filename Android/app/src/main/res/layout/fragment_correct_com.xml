<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_steam_com"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_333"
            android:textSize="@dimen/size_28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
                android:id="@+id/tv_com_content"
                android:textSize="@dimen/size_24"
                android:layout_centerVertical="true"
                android:textColor="@color/text_666"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_img"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <include layout="@layout/include_eare_correct" />
        <ViewStub
            android:id="@+id/stub_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/include_eare_comment" />
        <ViewStub
            android:id="@+id/stub_analy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/include_eare_analy" />
        <include layout="@layout/include_last_next"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>