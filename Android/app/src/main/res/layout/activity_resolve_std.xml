<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="满分：100分      学科：数学      班级：师资培训一班"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableLeft="@mipmap/ic_hw"
                android:drawablePadding="16.5dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_info_part"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_margin="15dp"
                android:textSize="10sp"
                android:textColor="@color/text_999"/>
            <TextView
                android:text="作业名称作业名称作业名称作业名称作业名称作业名称"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/tv_hw_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_333"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/seperate"/>
            <TextView
                android:layout_margin="15dp"
                android:text="作业整体情况分析"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableLeft="@mipmap/ic_rep_list"
                android:drawablePadding="5.5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:textSize="12sp"
                android:textColor="@color/text_333"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="得分"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/text_999"/>
                <TextView
                    android:text="班级平均分"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/text_999"/>
                <TextView
                    android:text="成绩上升  (名)"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/text_999"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_score_max"
                    android:text="0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/cyan"/>
                <TextView
                    android:id="@+id/tv_score_min"
                    android:text="0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/blue"/>
                <TextView
                    android:id="@+id/tv_score_avg"
                    android:text="0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/green"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/seperate"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>