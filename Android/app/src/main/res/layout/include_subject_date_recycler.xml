<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_subj_date_recycler"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height">
        <FrameLayout
            android:id="@+id/fl_subject"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp">
            <TextView
                android:id="@+id/tv_subject"
                android:layout_gravity="center"
                android:textSize="@dimen/size_30"
                android:gravity="center"
                android:drawableRight="@mipmap/arrow_down_blue"
                android:drawablePadding="14dp"
                android:textColor="@color/blue_tag"
                android:text="@string/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <View
            android:layout_marginTop="@dimen/padding_1"
            android:background="@color/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent">

        </View>
        <FrameLayout
            android:id="@+id/fl_date"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_date"
                android:textSize="@dimen/size_30"
                android:gravity="center"
                android:drawableRight="@mipmap/arrow_down_blue"
                android:drawablePadding="14dp"
                android:textColor="@color/blue_tag"
                android:text="@string/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </android.support.v4.widget.SwipeRefreshLayout>
        </FrameLayout>
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/fl_subject_container"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:background="@color/bg_grey"
                android:id="@+id/recyclerView_subject"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </FrameLayout>
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/fl_subject_date"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/bg_grey"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_start"
                        android:clickable="true"
                        android:background="@drawable/shape_round_white"
                        android:layout_weight="1"
                        android:text="@string/start"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/tv_end"
                        android:clickable="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/shape_round_white"
                        android:layout_weight="1"
                        android:text="@string/end_time"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="40dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="@dimen/padding_2"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_round_white"
                        android:id="@+id/btn_clear_time"
                        android:text="@string/clear"
                        android:layout_width="80dp"
                        android:layout_height="40dp" />
                    <Button
                        android:id="@+id/btn_submit_time"
                        android:background="@drawable/shape_round_white"
                        android:text="@string/sure"
                        android:layout_width="80dp"
                        android:layout_height="40dp" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </FrameLayout>
</LinearLayout>