<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_2"
    android:paddingBottom="@dimen/padding_2"
    android:paddingLeft="@dimen/padding_3"
    android:paddingRight="@dimen/padding_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.df.zhiyun.mvp.ui.widget.SegmentControlView
        android:id="@+id/segmentView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:scv_TextSelectedColor="@color/white"
        app:scv_TextSize="10sp"
        app:scv_TextNormalColor="@color/text_666"
        app:scv_BackgroundNormalColor="@android:color/transparent"
        app:scv_BackgroundSelectedColor="@color/blue_tag"
        app:scv_FrameColor="@android:color/transparent"
        app:scv_FrameCornerRadius="1dp"
        app:scv_FrameWidth="0dp"
        app:scv_Gradient="true"
        app:scv_SegmentPaddingVertical="5dp"
        app:scv_TextArray="@array/paper_comment"/>
    <android.support.v4.view.ViewPager
        android:layout_marginTop="20dp"
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>