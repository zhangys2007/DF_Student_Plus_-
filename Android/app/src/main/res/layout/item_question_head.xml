<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/line_bottom"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:paddingLeft="@dimen/padding_3"
    android:paddingRight="@dimen/padding_3">
    <TextView
        android:text="2020-04-25"
        android:id="@+id/tv_time"
        android:textSize="11sp"
        android:layout_centerVertical="true"
        android:textColor="#FFF63220"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:drawablePadding="@dimen/padding_2"
        android:drawableRight="@mipmap/arrow_up_grey"
        android:text="共计2道错题"
        android:id="@+id/tv_count"
        android:textSize="10sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>