<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <ImageView
        android:id="@+id/iv_post_list"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_list_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/iv_post_list"
        app:layout_constraintTop_toTopOf="parent"
        android:text="-"
        android:id="@+id/tv_post_title"
        android:textSize="13sp"
        android:textColor="@color/text_333"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_post_title"
        app:layout_constraintRight_toRightOf="parent"
        android:text="0000-00-00 00-00"
        android:id="@+id/tv_post_time"
        android:textSize="9sp"
        android:textColor="@color/text_999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:maxLength="2"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_post_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_post_list"
        android:text="-"
        android:id="@+id/tv_post_content"
        android:textSize="10sp"
        android:textColor="@color/text_666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:background="@drawable/border_stadium_purple"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_post_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="立即查看"
        android:id="@+id/tv_post_inspect"
        android:textSize="10sp"
        android:textColor="#FF8893FF"
        android:layout_width="60dp"
        android:layout_height="18dp" />
</android.support.constraint.ConstraintLayout>