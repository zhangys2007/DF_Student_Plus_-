<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <TextView
        android:id="@+id/tv_numb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="得分/总分：2.1 / 4        得分率：72.3%        难易度：1.2"
        android:textSize="11sp"
        android:textColor="@color/text_333"/>
    <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
        android:layout_marginTop="20dp"
        android:text="1. 一个直角三角形的两条直角边长分别为1和2，将该三角形分别绕其两个直角边旋转得到的两个圆锥的体积之比为（    ）"
        android:id="@+id/tv_content"
        android:textSize="14sp"
        android:textColor="@color/text_333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="学生答案"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_333"
        android:textSize="12sp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/ic_pencil_blue" />
    <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
        android:layout_marginTop="15dp"
        android:text="B"
        android:id="@+id/tv_std_answer"
        android:textSize="14sp"
        android:textColor="@color/text_333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="@string/knowlage_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_333"
        android:textSize="12sp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/ic_target" />
    <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
        android:layout_marginTop="15dp"
        android:text="本题涉及到的知识点，可能有多个"
        android:id="@+id/tv_check_point"
        android:textSize="12sp"
        android:textColor="@color/text_666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center_vertical"
        android:text="答案详解"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_333"
        android:textSize="12sp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/ic_light"
        android:layout_marginTop="15dp"/>
    <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/tv_answer_detail"
        android:textSize="12sp"
        android:text="此题的答案详解此题的答案详解此题的答案详解此题的答案详解 此题的答案详解此题的答案详解 "
        android:textColor="@color/text_666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>