<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/view_level_report"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintDimensionRatio="375:110"
                    android:id="@+id/convenientBanner"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:drawableLeft="@mipmap/ic_rep_list"
                android:drawablePadding="@dimen/padding_1"
                android:textSize="14sp"
                android:textColor="@color/text_333"
                android:text="阶段学业水平报告查询（作业）"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.CardView
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp"
                android:outlineSpotShadowColor="#33000000"
                android:layout_width="match_parent"
                android:layout_height="185dp">
                <LinearLayout
                    android:divider="@drawable/shape_divider_v"
                    android:showDividers="middle"
                    android:paddingRight="12.5dp"
                    android:paddingLeft="12.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:drawableRight="@mipmap/right_light"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="选择开始时间"
                        android:textColor="@color/text_999"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_clock_blue"/>
                    <TextView
                        android:drawableRight="@mipmap/right_light"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="选择结束时间"
                        android:textColor="@color/text_999"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_clock_red"/>
                    <TextView
                        android:drawableRight="@mipmap/right_light"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="选择查询班级"
                        android:textColor="@color/text_999"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_mans_y"/>
                    <TextView
                        android:foreground="?attr/selectableItemBackground"
                        android:id="@+id/tv_search_hw"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_width="260dp"
                        android:layout_height="25dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:text="@string/start_search"
                        android:background="@drawable/shape_round_light_green"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:drawableLeft="@mipmap/ic_rep_list_blue"
                android:drawablePadding="@dimen/padding_1"
                android:textSize="14sp"
                android:textColor="@color/text_333"
                android:text="阶段学业水平报告查询（考试）"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.CardView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp"
                android:outlineSpotShadowColor="#33000000"
                android:layout_width="match_parent"
                android:layout_height="185dp">
                <LinearLayout
                    android:divider="@drawable/shape_divider_v"
                    android:showDividers="middle"
                    android:paddingRight="12.5dp"
                    android:paddingLeft="12.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:drawableRight="@mipmap/right_light"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="选择开始时间"
                        android:textColor="@color/text_999"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_clock_blue"/>
                    <TextView
                        android:drawableRight="@mipmap/right_light"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="选择结束时间"
                        android:textColor="@color/text_999"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_clock_red"/>
                    <TextView
                        android:drawableRight="@mipmap/right_light"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="选择查询班级"
                        android:textColor="@color/text_999"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_mans_y"/>
                    <TextView
                        android:foreground="?attr/selectableItemBackground"
                        android:id="@+id/tv_search_paper"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_width="260dp"
                        android:layout_height="25dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:text="@string/start_search"
                        android:background="@drawable/shape_round_light_green"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>