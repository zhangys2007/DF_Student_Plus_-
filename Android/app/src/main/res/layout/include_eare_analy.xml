<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container_analy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <TextView
            android:layout_marginTop="15dp"
            android:text="[解题详情]"
            android:textSize="@dimen/size_24"
            android:textColor="@color/text_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="批注:"
            android:textSize="@dimen/size_24"
            android:textColor="@color/text_666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/tv_avg_score"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="平均分:"
            android:textSize="@dimen/size_24"
            android:textColor="@color/text_666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_ll_remain"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>
            <TextView
                android:id="@+id/tv_knowledge"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="知识内容:"
                android:textSize="@dimen/size_24"
                android:textColor="@color/text_666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>
            <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
                android:id="@+id/tv_gold"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="测量目标:"
                android:textSize="@dimen/size_24"
                android:textColor="@color/text_666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>
            <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
                android:id="@+id/tv_question_analy"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="解析:"
                android:textSize="@dimen/size_24"
                android:textColor="@color/text_666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl_analy_mask"
        android:background="@drawable/white_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_expand"
            android:textColor="@color/green"
            android:text="@string/expand_show_detail"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </FrameLayout>
</FrameLayout>