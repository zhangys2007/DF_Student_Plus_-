<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
                android:id="@+id/tv_name"
                android:textSize="@dimen/size_24"
                android:layout_centerVertical="true"
                android:textColor="@color/text_666"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <!--<TextView-->
                <!--android:text="(     )"-->
                <!--android:textSize="12sp"-->
                <!--android:gravity="center"-->
                <!--android:textColor="@color/text_666"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="wrap_content" />-->
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <View android:layout_width="match_parent"
            android:id="@+id/v_my_line"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/tv_title_myanswer"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginTop="@dimen/padding_5"
            android:text="@string/my_answer"
            android:textSize="@dimen/size_24"
            android:gravity="center"
            android:textColor="@color/blue_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
            android:id="@+id/tv_my_answer"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_marginTop="@dimen/padding_2"
            android:textSize="@dimen/size_22"
            android:gravity="center"
            android:textColor="@color/text_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="@color/divider"/>
        <TextView
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginTop="@dimen/padding_5"
            android:text="@string/check_point"
            android:textSize="@dimen/size_24"
            android:gravity="center"
            android:textColor="@color/blue_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
            android:id="@+id/tv_check_point"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_marginTop="@dimen/padding_2"
            android:textSize="@dimen/size_22"
            android:gravity="center"
            android:textColor="@color/text_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider"/>
        <TextView
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginTop="@dimen/padding_5"
            android:text="@string/answer"
            android:textSize="@dimen/size_24"
            android:gravity="center"
            android:textColor="@color/blue_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
            android:id="@+id/tv_answer"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_marginTop="@dimen/padding_2"
            android:textSize="@dimen/size_22"
            android:gravity="center"
            android:textColor="@color/text_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider"/>
        <TextView
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginTop="@dimen/padding_5"
            android:text="@string/analy"
            android:textSize="@dimen/size_24"
            android:gravity="center"
            android:textColor="@color/blue_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.df.zhiyun.mvp.ui.widget.flexiblerichtextview.htmltextview.HtmlTextView
            android:layout_marginTop="@dimen/padding_2"
            android:layout_marginBottom="@dimen/padding_2"
            android:id="@+id/tv_analy"
            android:textSize="@dimen/size_22"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:textColor="@color/text_666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>