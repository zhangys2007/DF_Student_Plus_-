<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:layout_height="125dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_chn"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="4dp"
        android:clipChildren="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_bg"
            android:scaleType="centerCrop"
            android:src="@mipmap/pink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
    <FrameLayout
        android:paddingLeft="@dimen/padding_2"
        android:paddingRight="@dimen/padding_2"
        android:paddingTop="@dimen/padding_2"
        android:paddingBottom="@dimen/padding_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="@dimen/padding_1"
            android:layout_marginRight="@dimen/padding_1"
            android:layout_marginTop="@dimen/padding_1"
            android:text=""
            android:id="@+id/tv_paper_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:maxLines="2"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/padding_1"
            android:layout_marginRight="@dimen/padding_1"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="我的得分："
                android:id="@+id/tv_my_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1" />
            <TextView
                android:layout_marginLeft="@dimen/padding_2"
                android:text="平均分："
                android:id="@+id/tv_avg_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/padding_1"
            android:layout_marginRight="@dimen/padding_1"
            android:layout_marginBottom="@dimen/padding_1"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="开始时间："
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1" />
            <TextView
                android:layout_marginLeft="@dimen/padding_2"
                android:text="满分："
                android:id="@+id/tv_full_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
