<?xml version="1.0" encoding="utf-8"?>
<LinearLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="@string/title"
            android:textSize="18sp"
            android:textColor="@color/text_333"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@mipmap/ic_bell"
            android:id="@+id/iv_notice"
            android:clickable="true"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center_vertical"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FF161616"
                android:drawablePadding="@dimen/padding_1"
                android:drawableLeft="@mipmap/ic_book_o"
                android:text="@string/plan"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageButton
                    android:id="@+id/iv_plan_cloud"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/v_cloud"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:id="@+id/iv_plan_self"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@mipmap/v_self_plan"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:gravity="center_vertical"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FF161616"
                android:drawablePadding="@dimen/padding_1"
                android:drawableLeft="@mipmap/ic_pen_green"
                android:text="@string/homework_manage"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/fl_hw_put"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/shape_stadium_light_orange">
                    <TextView
                        android:layout_gravity="center"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_pen_o"
                        android:gravity="center"
                        android:textColor="#FFFF7400"
                        android:text="@string/put_homework"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_hw_his"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginLeft="45dp"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/shape_stadium_light_blue">
                    <TextView
                        android:layout_gravity="center"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_history_blue"
                        android:gravity="center"
                        android:textColor="#569dff"
                        android:text="@string/history_homework"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView_hw"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FF161616"
                android:drawablePadding="@dimen/padding_1"
                android:drawableLeft="@mipmap/ic_hat"
                android:text="@string/test_manager"/>
            <android.support.constraint.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_put"
                    android:text="@string/make_paper"
                    android:id="@+id/tv_make"
                    android:drawableTop="@mipmap/ic_add_red"
                    android:textColor="#FF716F6F"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_make"
                    app:layout_constraintRight_toLeftOf="@id/tv_all"
                    android:text="@string/group_paper"
                    android:id="@+id/tv_put"
                    android:drawableTop="@mipmap/ic_paper_blue"
                    android:textColor="#FF716F6F"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_put"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/all_paper"
                    android:id="@+id/tv_all"
                    android:drawableTop="@mipmap/ic_history_purple"
                    android:textColor="#FF716F6F"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView_manager"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

