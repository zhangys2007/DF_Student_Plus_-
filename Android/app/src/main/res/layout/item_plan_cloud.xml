<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_cover"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardElevation="3dp"
        android:layout_width="90dp"
        android:layout_height="128dp">
        <ImageView
            android:id="@+id/iv_cover"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_template_name"
        app:layout_constraintTop_toTopOf="@id/cv_cover"
        app:layout_constraintLeft_toRightOf="@id/cv_cover"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/padding_2"
        android:layout_marginTop="@dimen/padding_2"
        android:textSize="14sp"
        android:textColor="@color/text_333"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end" />
    <TextView
        android:id="@+id/tv_time"
        android:drawableLeft="@mipmap/ic_clock"
        android:drawablePadding="@dimen/padding_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cv_cover"
        android:layout_marginLeft="@dimen/padding_2"
        android:layout_marginBottom="@dimen/padding_2"
        android:textSize="12sp"
        android:textColor="@color/text_999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_price"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_time"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/padding_2"
        android:layout_marginBottom="@dimen/padding_2"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
