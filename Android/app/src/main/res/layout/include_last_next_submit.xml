<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/ll_bar_last_next"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_behavior="@string/behavior_fix_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:background="@drawable/line_h_gradient"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="3dp"/>
    <TextView
        app:layout_constraintRight_toLeftOf="@id/tv_submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_last"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="@color/orange"
        android:background="?attr/selectableItemBackground"
        android:text="@string/last_question"
        android:layout_width="90dp"
        android:layout_height="25dp" />
    <TextView
        app:layout_constraintRight_toLeftOf="@id/tv_next"
        app:layout_constraintLeft_toRightOf="@id/tv_last"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:id="@+id/tv_submit"
        android:textSize="13sp"
        android:gravity="center"
        android:background="@drawable/shape_round_orange_big"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/do_submit"
        android:layout_width="90dp"
        android:layout_height="25dp" />
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_submit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/orange"
        android:id="@+id/tv_next"
        android:textSize="13sp"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:text="@string/next_question"
        android:layout_width="90dp"
        android:layout_height="25dp" />
</android.support.constraint.ConstraintLayout>