<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/shape_divider_v"
    android:showDividers="middle"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        app:contentInsetStart="0dp">
        <TextView
            android:text="20:20"
            android:drawableLeft="@mipmap/arrow_left_grey"
            android:paddingLeft="15dp"
            android:drawablePadding="@dimen/padding_2"
            android:id="@+id/toolbar_left_title"
            android:layout_width="wrap_content"
            android:minWidth="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/size_24"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@color/text_999"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/text_333"
            android:textSize="17sp"
            tools:text="@string/app_name"/>
        <LinearLayout
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:visibility="invisible"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/iv_store"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/start_un"
                android:scaleType="centerInside"/>
            <ImageView
                android:background="?attr/selectableItemBackground"
                android:id="@+id/iv_card"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/card"
                android:scaleType="centerInside"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:paddingLeft="@dimen/padding_3"
        android:paddingRight="@dimen/padding_3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <ProgressBar
            android:progressDrawable="@drawable/progress_bar_orange"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center_vertical"
            android:id="@+id/pb_index"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="8dp"/>
        <TextView
            android:textColor="@color/text_666"
            android:textSize="13sp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="0/0"
            android:id="@+id/tv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.example.df.zhiyun.mvp.ui.widget.ViewPagerSlide
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.df.zhiyun.mvp.ui.widget.ViewPagerSlide>
</LinearLayout>