<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_grey"
    android:orientation="vertical">
    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fake_bar_height"
        android:background="@color/red"/>
    <include layout="@layout/include_head_search"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout_hw"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/bg_grey"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/size_24"
                    android:layout_alignParentLeft="true"
                    android:drawableTop="@mipmap/yuwen"
                    android:drawablePadding="3dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/tv_yuwen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_work_yuwen" />
                <TextView
                    android:textSize="@dimen/size_24"
                    android:layout_alignParentRight="true"
                    android:drawableTop="@mipmap/math"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:drawablePadding="3dp"
                    android:id="@+id/tv_math"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_work_math" />
                <TextView
                    android:textSize="@dimen/size_24"
                    android:layout_centerHorizontal="true"
                    android:drawableTop="@mipmap/english"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:drawablePadding="3dp"
                    android:id="@+id/tv_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_work_english" />


            </RelativeLayout>
            <RelativeLayout
                android:paddingRight="@dimen/padding"
                android:paddingLeft="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/homework_newest"
                    android:textSize="@dimen/size_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/tv_hw_more"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_hw"
                android:layout_marginRight="@dimen/padding_2"
                android:layout_marginLeft="@dimen/padding_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:text="@string/sync_practice"
                android:textSize="@dimen/size_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_english"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginRight="4dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/radius"
                    android:clipChildren="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="81dp">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@mipmap/english_sync"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_math"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginRight="4dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="4dp"
                    android:clipChildren="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="81dp">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@mipmap/math_sync"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_chinese"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginRight="4dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="4dp"
                    android:clipChildren="true"
                    app:cardPreventCornerOverlap="false"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="81dp">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@mipmap/chinese_sync"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginRight="4dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="4dp"
                    android:clipChildren="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="81dp">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>

