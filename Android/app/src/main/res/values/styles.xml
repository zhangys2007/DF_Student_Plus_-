<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!--<style name="SplashTheme" parent="@style/AppTheme">-->
        <!--<item name="android:windowBackground">@mipmap/splash</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->
    <!--</style>-->
    <style name="SplashTheme" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Animation_Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_center</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_center_to_right</item>
    </style>

    <style name="AlbumTheme" parent="@style/Matisse.Zhihu">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="toolbar">@style/Toolbar.Zhihu</item>
    </style>



    <!-- 自定义对话框样式，底部弹窗和中间弹窗共用 -->
    <style name="CcommonDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 自定义对话框样式，底部弹窗和中间弹窗共用 -->
    <style name="canvasDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 自定义的Dialog进出动画 中间弹窗 -->
    <style name="DialogInAndOutAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>

    <!-- 自定义Dialog进出动画 底部弹窗 -->
    <style name="BottomDialogInAndOutAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out_anim</item>
    </style>
    <!--自定义actionbar时，bar上的按钮风格-->
    <style name="toolbar_button">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <!--类似我的页面的各个选择项的样式-->
    <style name="item_text">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableRight">@mipmap/right</item>
        <item name="android:drawablePadding">@dimen/padding_1</item>
        <item name="android:paddingLeft">@dimen/padding_2</item>
        <item name="android:paddingRight">@dimen/padding_3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <!--类似我的页面的各个选择项的样式-->
    <style name="item_container">
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/padding_2</item>
        <item name="android:paddingRight">@dimen/padding_3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="item_text_left">
        <item name="android:textColor">@color/text_666</item>
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:drawablePadding">@dimen/padding_1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="item_text_right">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:drawablePadding">@dimen/padding_1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawableRight">@mipmap/right</item>
    </style>

    <style name="signde_date" >
        <item name="android:textColor">@drawable/selector_color_white_black</item>
        <item name="android:background">@drawable/selector_bg_white_circleorange</item>
    </style>

    <!-- 自定义Dialog进出动画 底部弹窗 -->
    <style name="popupwindowAnim">
        <item name="android:windowEnterAnimation">@anim/popupwindow_expand</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_shrink</item>
    </style>

    <style name="item_my">
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">8.5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">13.5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableRight">@mipmap/right</item>
    </style>
    <style name="StarRatingBar"
        parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">
            @drawable/ratingbar_start
        </item>
        <item name="android:maxHeight">6dp</item>
        <item name="android:minHeight">6dp</item>
    </style>

    <!--自定义折线图的滑块-->
    <declare-styleable name="ScrollBlockView">
        <!--背景颜色-->
        <attr name="bgColor" format="color|reference" />
        <attr name="blockColor" format="color|reference" />
    </declare-styleable>
</resources>
